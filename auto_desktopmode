<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" id="viewportMeta" content="width=device-width, initial-scale=1.0">
  <title>Auto Desktop Mode</title>
  <script>
    // Function to detect mobile devices
    function isMobileDevice() {
      return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
    }

    // Function to force desktop mode
    function forceDesktopMode() {
      if (isMobileDevice()) {
        // Change the viewport meta tag to simulate a desktop view
        var viewportMeta = document.getElementById('viewportMeta');
        viewportMeta.setAttribute('content', 'width=1200, initial-scale=1.0');
        alert('Desktop mode activated for mobile viewers.');
      }
    }

    // Run the function when the page loads
    window.onload = forceDesktopMode;
  </script>
</head>
<body>
  <h1>Welcome to My Website</h1>
  <p>This page will automatically switch to desktop mode if you're on a mobile device.</p>
</body>
</html>